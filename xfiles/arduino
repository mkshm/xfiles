[built-in options]
c_args = [
  '-mmcu=' + mcpu,
  '-fsigned-char',
  '-fshort-enums',
  '-fpack-struct',
  '-ffunction-sections',
  '-fdata-sections',
  '-DF_CPU=16000000L',
  '-DARDUINO=105',
